<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/purple_200">

    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="37sp"
        android:gravity="bottom|right"
        android:hint="0"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:background="@color/purple_100"/>

    <!--    Row 1   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:onClick="onClickDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:layout_width="0dp"
            android:onClick="onClickDigit"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onClickDigit"
            android:id="@+id/btn3"
            android:text="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/divider"
            android:text="/"
            android:onClick="onOperator"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_400"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>


        
    </LinearLayout>

    <!--    Row 2   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn4"
            android:text="4"
            android:onClick="onClickDigit"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn5"
            android:text="5"
            android:onClick="onClickDigit"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn6"
            android:onClick="onClickDigit"
            android:text="6"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/multiply"
            android:text="*"
            android:onClick="onOperator"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_400"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>



    </LinearLayout>

    <!--    Row 3   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn7"
            android:text="7"
            android:onClick="onClickDigit"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn8"
            android:onClick="onClickDigit"
            android:text="8"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn9"
            android:text="9"
            android:onClick="onClickDigit"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sub"
            android:text="-"
            android:onClick="onOperator"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_400"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>



    </LinearLayout>

    <!--    Row 4   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dot"
            android:text="."
            android:onClick="decimalPoint"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_400"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn0"
            android:text="0"
            android:onClick="onClickDigit"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_300"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/clear"
            android:onClick="onClear"
            android:text="clr"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_800"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sum"
            android:text="+"
            android:onClick="onOperator"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_400"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/equal"
            android:text="="
            android:onClick="onEqual"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_600"
            android:textSize="32dp"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>